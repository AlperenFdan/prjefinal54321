@model IEnumerable<ProjeFinal.Models.Brand>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/ManagerPanel/Views/Shared/_LayoutPage1.cshtml";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
    <link href="~/Areas/ManagerPanel/Data/Styles/IndexStyle.css" rel="stylesheet" />
</head>
<body style="background: linear-gradient(to bottom, Black,rgb(15,15,15),rgb(15,15,15),rgb(15,15,15),Black); background-repeat: no-repeat; ">
    <div class="TableParent" style="margin-left:200px;">
        <div class="TableTop">
            <a href="@Url.Action("Create","BrandForManager")" class="AddButton">Marka ekle</a>
        </div>
        <table class="Table">
            <tr>
            
                <th>Marka No</th>

                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
            
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    Aktiflik
                </th>
                <th>
                    Yayınlanma zamanı
                </th>
            
                <th @*style="border-top: none; border-right:none"*@>Seçenekler</th>

            </tr>
            @foreach (var item in Model)
            {
                if (!item.IsActive)
                {
                    <tr style="background-color:#ffdede">

                        <td>@item.ID</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>

                        <td>

                            <label>Pasif</label>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreationTime)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit","BrandForManager",new {id=item.ID})" class="Edita">Düzenle</a>
                            <a href="@Url.Action("DeletePage","BrandForManager",new {id=item.ID})" class="Deletea">Sil</a>
                        </td>
                    </tr>
                }
                else
                {
                    <tr>

                        <td>@item.ID</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                      
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                   

                        <td>
                            <label>Aktif</label>
                        </td>
                           <td>
                               @Html.DisplayFor(modelItem => item.CreationTime)
                           </td>
                        <td style="width:110px;">
                            <a href="@Url.Action("Edit","BrandForManager",new {id=item.ID})" class="Edita">Düzenle</a>
                            <a href="@Url.Action("DeletePage","BrandForManager",new {id=item.ID})" class="Deletea">Sil</a>
                        </td>
                    </tr>
                }

            }
        </table>
        <div class="TableBottom">

        </div>
    </div>

</body>
</html>

