@model ProjeFinal.Models.GraphicsCard
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/ManagerPanel/Views/Shared/_LayoutPage1.cshtml";
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<link href="~/Areas/ManagerPanel/Data/Styles/IndexStyle.css" rel="stylesheet" />
    <title></title>
</head>
<body style="background: linear-gradient(to bottom, Black,rgb(15,15,15),rgb(15,15,15),rgb(15,15,15),Black); background-repeat: no-repeat; ">
    <div class="PagePlace">
        <div class="ProductPlace">
            @using (Html.BeginForm("Edit", "GraphicsCardForManger", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.HiddenFor(model => model.ID);
      
                @Html.HiddenFor(model => model.CreationTime);
                @Html.HiddenFor(model => model.IsDeleted);
                @Html.HiddenFor(model => model.imgs);
                @Html.AntiForgeryToken()
                <div class="img">
                    <img src="~/MyDataForFinalProject/Photos/@Model.imgs" />
                </div>

                <div class="left">

                    <div class="row">
                        @Html.LabelFor(model => model.Category, htmlAttributes: new { @class = "LabelStyle" })
                        @Html.DropDownList("CategoryID", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                    <div class="row">
                        @Html.LabelFor(model => model.Brand, htmlAttributes: new { @class = "LabelStyle" })
                        @Html.DropDownList("BrandID", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                    <div class="row">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "LabelStyle" })
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="row">
                        @Html.LabelFor(model => model.stock, htmlAttributes: new { @class = "LabelStyle" })
                        @Html.EditorFor(model => model.stock, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="row">
                        @Html.LabelFor(model => model.SStock, htmlAttributes: new { @class = "LabelStyle" })
                        @Html.EditorFor(model => model.SStock, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="row">
                        @Html.LabelFor(model => model.bitnumber, htmlAttributes: new { @class = "LabelStyle" })
                        @Html.EditorFor(model => model.bitnumber, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="row">
                        @Html.LabelFor(model => model.Connects, htmlAttributes: new { @class = "LabelStyle" })
                        @Html.EditorFor(model => model.Connects, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="row">
                        @Html.LabelFor(model => model.StorgeType, htmlAttributes: new { @class = "LabelStyle" })
                        @Html.EditorFor(model => model.StorgeType, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="right">
                    <div class="row">
                        <input type="file" name="hpf" value="Resmi düzenle" class="InputForImage" />
                    </div>
                    <div class="row">
                        @Html.LabelFor(model => model.CompatibleConnect, htmlAttributes: new { @class = "LabelStyle" })
                        @Html.EditorFor(model => model.CompatibleConnect, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="row">
                        @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "LabelStyle" })
                        @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="row">
                        @Html.LabelFor(model => model.VRAM, htmlAttributes: new { @class = "LabelStyle" })
                        @Html.EditorFor(model => model.VRAM, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="row">
                        @Html.LabelFor(model => model.Series, htmlAttributes: new { @class = "LabelStyle" })
                        @Html.EditorFor(model => model.Series, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="row">
                        @Html.LabelFor(model => model.ListPrice, htmlAttributes: new { @class = "LabelStyle" })
                        @Html.EditorFor(model => model.ListPrice, new { htmlAttributes = new { @class = "form-control", @Value = "0" } })
                    </div>
                    <div class="row">
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "LabelStyle" })
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="row">
                        <input type="submit" value="Ürünü Düzenle" class="AddBtn" />
                    </div>
                    <div class="row CheckBox">
                        @Html.EditorFor(model => model.IsActived) Aktif Ürün
                        @Html.ValidationMessageFor(model => model.IsActived, "", new { @class = "text-danger" })
                    </div>

                </div>
                <div style="clear:both"></div>
                if (ViewBag.error != null)
                {
                    <div>
                        <h2 style=" color: red"> @ViewBag.error</h2>
                    </div>
                }
            }
        </div>
    </div>
</body>
</html>

